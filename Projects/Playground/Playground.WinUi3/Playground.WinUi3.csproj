<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <RootNamespace>Playground.WinUi3</RootNamespace>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Platforms>x86;x64;arm64</Platforms>
    <RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
    <UseWinUI>true</UseWinUI>
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Views\ChildView.xaml" />
    <None Remove="Views\DialogView.xaml" />
    <None Remove="Views\RootView.xaml" />
    <None Remove="Views\SecondChildView.xaml" />
    <None Remove="Views\SplitDetailView.xaml" />
    <None Remove="Views\SplitMasterView.xaml" />
    <None Remove="Views\SplitRootView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ProjectReunion" />
    <PackageReference Include="Microsoft.ProjectReunion.Foundation" />
    <PackageReference Include="Microsoft.ProjectReunion.WinUI" />
    <Manifest Include="$(ApplicationManifest)" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="Views\ChildView.xaml" />
    <Page Include="Views\DialogView.xaml" />
    <Page Include="Views\RootView.xaml" />
    <Page Include="Views\SecondChildView.xaml" />
    <Page Include="Views\SplitDetailView.xaml" />
    <Page Include="Views\SplitMasterView.xaml" />
    <Page Include="Views\SplitRootView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\MvvmCross\MvvmCross.csproj" />
    <ProjectReference Include="..\Playground.Core\Playground.Core.csproj" />
  </ItemGroup>

</Project>
