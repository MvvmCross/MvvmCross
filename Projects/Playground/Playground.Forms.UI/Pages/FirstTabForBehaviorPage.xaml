<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage x:TypeArguments="navigation:FirstTabForBehaviorViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:navigation="clr-namespace:Playground.Core.ViewModels.Navigation;assembly=Playground.Core"
             mc:Ignorable="d"
             Title="First Tab"
             x:Class="Playground.Forms.UI.Pages.FirstTabForBehaviorPage">
    <StackLayout>
        <Entry Text="{Binding SampleModel.Message, Mode=TwoWay}" 
               Placeholder="Please Enter Some Message" />
        <Label Text="{Binding SampleModel.Value}" 
               FontSize="Title"
               HorizontalOptions="Center" />
        <Stepper Minimum="-20" 
                 Maximum="20" 
                 Value="{Binding SampleModel.Value, Mode=TwoWay}" 
                 HorizontalOptions="Center"/>
    </StackLayout>
</views:MvxContentPage>