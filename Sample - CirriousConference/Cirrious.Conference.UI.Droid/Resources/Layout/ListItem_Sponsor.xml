<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/com.cirrious.conference.sqlbits"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    local:MvxBind="{'Click':{'Path':'Command'}}"
    >
  <ImageView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:local="http://schemas.android.com/apk/res/com.cirrious.conference.sqlbits"
      android:id="@+id/SponsorImageView"
      android:layout_width="160dp"
      android:layout_height="70dp"
      android:padding="10dp"
      android:icon="@drawable/icon"
      local:MvxBind="AssetImagePath Item.Image,Converter=SponsorImage"
    />
  <TextView
      android:id="@+id/SponsorImageView"
      android:layout_width="fill_parent"
      android:layout_height="70dp"
      android:padding="10dp"
      android:textSize="24dp"
      local:MvxBind="Text Item.Name"
    />
</LinearLayout>

